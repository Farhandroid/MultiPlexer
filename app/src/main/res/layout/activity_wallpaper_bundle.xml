<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.WallpaperBundleActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayoutInWallpaperBundle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fitsSystemWindows="true">


        <include
            android:id="@+id/toolbarlayoutinwallpaperBundle"
            layout="@layout/toolbar_layout_in_wallpaper_bundle_activity"
            />


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_below="@id/appbarLayoutInWallpaperBundle"
        android:padding="7dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/kheladhula_cricket_1"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:textSize="28sp"
            android:text="বিস্তারিত"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="3dp"
            android:textSize="@dimen/textSize"
            android:text="ক্রিকেট দুনিয়ার নানান ধরনের দারুন সব খবর নিয়ে আমাদের এই আয়োজন"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:text="বিশেষ অফার"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/strikeThroughInWallPaperBundle"
                        android:text="৳১৫"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:text="৳১০"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



            </LinearLayout>

            <Button
                android:layout_marginLeft="10dp"
                android:text="কিনুন / ডাউনলোড করুন"
                android:textColor="@color/White"
                android:background="@drawable/btn_style_red"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>